---
import type { Lang } from '../../i18n';
import { ui } from '../../i18n';

export interface Props {
  lang: Lang;
  bookingUrl: string;
  switchLangHref: string;
}

const { lang, bookingUrl, switchLangHref } = Astro.props as Props;
---
<section id="hero">
  <h1>{ui[lang].hero.heading}</h1>
  <p>{ui[lang].hero.subheading}</p>
  <p>{ui[lang].hero.address}</p>
  <p>
    <a href={bookingUrl}>{ui[lang].hero.ctaPrimary}</a>
    <a href={switchLangHref}>{ui[lang].hero.ctaSecondary}</a>
  </p>
</section>
