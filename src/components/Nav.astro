---
import type { Lang } from '../../i18n';
import { ui } from '../../i18n';
import LanguageToggle from './LanguageToggle.tsx';

export interface Props {
  lang: Lang;
  bookingUrl?: string;
}

const { lang, bookingUrl = '#book' } = Astro.props as Props;

const homeHref = lang === 'vi' ? '/' : '/en/';
const links = [
  { href: homeHref, label: ui[lang].nav.home },
  { href: bookingUrl, label: ui[lang].nav.book },
  { href: '#about', label: ui[lang].nav.about },
  { href: '#price', label: ui[lang].nav.price },
  { href: '#warranty', label: ui[lang].nav.warranty },
  { href: '#news', label: ui[lang].nav.news },
];
---
<nav>
  <ul>
    {links.map((l) => (
      <li><a href={l.href}>{l.label}</a></li>
    ))}
  </ul>
  <LanguageToggle client:load lang={lang} />
</nav>
