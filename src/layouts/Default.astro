---
import type { Lang } from '../../i18n';
export interface Props {
  lang: Lang;
  title: string;
  description?: string;
}
const { lang, title, description } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <slot />
  </body>
</html>
